@model Book_Reservation.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="auth-container">
    <div class="header">
        <img src="@Url.Content("~/images/logo.svg")" alt="Book Reservation Logo" class="logo">
        <h1>Book Reservation System</h1>
    </div>
    <form asp-action="Login" method="post" id="loginForm">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="user@xyz.com" required />
            <span asp-validation-for="Email" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="xyzhdsj" required />
            <span asp-validation-for="Password" class="error-message"></span>
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
        <div class="form-buttons">
            <a href="@Url.Action("SignUp", "Account")" class="btn btn-secondary">Register</a>
            <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-danger">Forgot password</a>
        </div>
    </form>
</div>
