@model Book_Reservation.Models.SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="auth-container">
    <div class="header">
        <img src="@Url.Content("~/images/logo.svg")" alt="Book Reservation Logo" class="logo">
        <h1>Create Account</h1>
    </div>
    <form asp-action="SignUp" method="post" id="signupForm">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Your Name" required />
            <span asp-validation-for="Name" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="user@xyz.com" required />
            <span asp-validation-for="Email" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="xyzhdsj" required />
            <span asp-validation-for="Password" class="error-message"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
