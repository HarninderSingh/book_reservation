@model Book_Reservation.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="auth-container">
    <div class="header">
        <img src="@Url.Content("~/images/logo.svg")" alt="Book Reservation Logo" class="logo">
        <h1>Reset Your Password</h1>
    </div>
    <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="user@xyz.com" required />
            <span asp-validation-for="Email" class="error-message"></span>
        </div>
        <div class="form-group">
            <label for="newPassword">New Password</label>
            <input type="password" id="newPassword" name="NewPassword" class="form-control" placeholder="xyzhdsj" required />
        </div>
        <button type="submit" class="btn btn-primary">Change Password</button>
    </form>
</div>
