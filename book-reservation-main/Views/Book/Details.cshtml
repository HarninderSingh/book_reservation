@model Book_Reservation.Models.Book
@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="navbar">
    <a href="@Url.Action("Dashboard", "Book")" class="navbar-brand">
        <img src="@Url.Content("~/images/logo.svg")" alt="Book Reservation Logo" class="navbar-logo">
        <span class="navbar-title">Book Reservation System</span>
    </a>
    <div class="navbar-user">
        <span class="navbar-username" id="username">@User.Identity?.Name</span>
        <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
            <button class="navbar-logout" type="submit">Logout</button>
        </form>
    </div>
</header>
<nav class="nav-tabs">
    <a href="@Url.Action("Dashboard", "Book")" class="nav-tab">Home</a>
    <a href="@Url.Action("Browse", "Book")" class="nav-tab">Reserve Book</a>
</nav>
<main class="main-content">
    <h1 class="page-title">Book Details</h1>
    <div class="book-detail">
        <div class="book-detail-header">
            <div class="book-detail-img">
                <img src="@Model.ImageUrl" alt="@Model.Title" />
            </div>
            <div class="book-detail-info">
                <div class="book-detail-title">@Model.Title</div>
                <div class="book-detail-author">by @Model.Author</div>
                <div class="book-detail-metadata">
                    <div class="book-detail-item"><span class="book-detail-label">Edition:</span> @Model.Edition</div>
                    <div class="book-detail-item"><span class="book-detail-label">Year:</span> @Model.Year</div>
                    <div class="book-detail-item"><span class="book-detail-label">Genre:</span> @Model.Genre</div>
                    <div class="book-detail-item"><span class="book-detail-label">Publisher:</span> @Model.Publisher</div>
                    <div class="book-detail-item"><span class="book-detail-label">ISBN:</span> @Model.ISBN</div>
                    <div class="book-detail-item"><span class="book-detail-label">Pages:</span> @Model.Pages</div>
                </div>
                @* Book model does not have a Description property, so this is removed. *@
                @* <div class="book-detail-description">
                    @Model.Description
                </div> *@
                <div class="book-detail-actions">
                    <a href="@Url.Action("Dashboard", "Book")" class="btn btn-back">Back</a>
                    <form asp-action="CancelReservation" asp-route-id="@Model.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Cancel Reservation</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
